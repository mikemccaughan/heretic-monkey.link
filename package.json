{
  "name": "heretic-monkey.link",
  "version": "0.1.0",
  "description": "",
  "main": "server.cjs",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "hm-walls",
    "hm-walls-api",
    "material-test"
  ],
  "scripts": {
    "start": "yarn node server.cjs",
    "build:yarn": "yarn set version latest",
    "build:prebuild": "yarn dlx npm-check-updates -u && yarn install",
    "build:directories": "rm -rf publish && mkdir -p publish && mkdir -p publish/mynsweepr-angular && mkdir -p publish/mynsweepr-hooks && mkdir -p publish/mynsweepr-react && mkdir -p publish/mynsweepr-react19",
    "build:nobuild": "yarn install && cp *.*js publish/ && cp *.html publish/ && cp *.css publish/ && cp -r hm-grid publish/hm-grid && cp -r design publish/design",
    "build:workspaces": "yarn workspaces focus --all && yarn workspaces foreach -v --all --exclude heretic-monkey.link run build",
    "build:predeploy": "bash ./build-mynsweeprs.sh",
    "build": "yarn run build:yarn && yarn run build:prebuild && yarn run build:directories && yarn run build:nobuild && yarn run build:workspaces && yarn run build:predeploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikemccaughan/heretic-monkey.link.git"
  },
  "author": "Mike McCaughan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mikemccaughan/heretic-monkey.link/issues"
  },
  "homepage": "https://github.com/mikemccaughan/heretic-monkey.link#readme",
  "packageManager": "yarn@4.12.0",
  "dependencies": {
    "@js-temporal/polyfill": "^0.5.1",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@yarnpkg/pnpify": "^4.1.6",
    "@yarnpkg/sdks": "^3.2.3",
    "body-parser": "^2.2.1",
    "brace-expansion": "^4.0.1",
    "braces": "^3.0.3",
    "cacache": "^20.0.3",
    "cookie": "^1.1.1",
    "cross-spawn": "^7.0.6",
    "ejs": "^3.1.10",
    "esbuild": "^0.27.1",
    "express": "5",
    "http-proxy-middleware": "^3.0.5",
    "jsonpath-plus": "^10.3.0",
    "loader-utils": "^3.3.1",
    "micromatch": "^4.0.8",
    "nanoid": "^5.1.6",
    "path-to-regexp": "^8.3.0",
    "rollup": "^4.53.3",
    "send": "^1.2.0",
    "serialize-javascript": "7.0.2",
    "serve-static": "^2.2.0",
    "typescript": "^5.9.3",
    "undici": "^7.16.0",
    "vite": "^7.2.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/body-parser": "^1.19.6",
    "@types/braces": "^3",
    "@types/ejs": "^3",
    "@types/express": "^5.0.6",
    "@types/micromatch": "^4",
    "@types/node": "^24.10.2",
    "@types/serve-static": "^2.2.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/typescript-estree": "^8.49.0",
    "eslint": "^9.39.1",
    "typescript-eslint": "^8.49.0"
  }
}
