{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "tscOut",
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "angularCompilerOptions": {
        "strictTemplates": true
    },
    "exclude": [
        "publish"
    ]
}